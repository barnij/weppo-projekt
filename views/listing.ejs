<%- include('templates/head'); %>

    <%- include('templates/nav'); %>

        <div class="container" style="padding: 75px;">
            <div class="col align-self-center">
                <div class="row">
                    <div class="input-group md-form form-sm form-2 pl-0">
                        <input class="form-control my-0 py-1 blue-border" type="text" placeholder="Search"
                            aria-label="Search">
                    </div>
                </div>
                <div class="d-flex flex-wrap justify-content-center">
                    <% for(item of listing){ %>
                    <div class="card" style="width: 18rem; margin: 15px ;">
                        <a href="/product/<%= item.id %>">
                            <img src="/assets/uploads/<%= item.id %>.jpg" class="card-img-top" alt="item_photo" style="height: 200px;">
                        </a>
                        <div class="card-body">
                            <a href="/product/<%= item.id %>">
                                <h5 class="card-title"><%= item.name %> </h5>
                            </a>
                            <p class="card-text"><%= item.price %> </p>
                            <a href="#" class="btn btn-primary">Add to basket</a>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>

        <%- include('templates/end'); %>