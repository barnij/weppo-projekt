<%- include('templates/head'); %>

    <%- include('templates/nav'); %>

        <div class="container">
            <div class="row">
                <h1 class="display-2" style="text-align: center;">Zamówienie #<%= id %>
                </h1>
            </div>


            <div class="list-group" style="margin: 1em 5em">
                <% var sum=0 %>
                    <% for(product of product_list) { %>
                        <% sum +=product.amount * product.price %>
                            <div class="list-group-item list-group-item-action flex-column align-items-start">
                                <div class="row">
                                    <div class="col">
                                        <div class="d-flex w-100 justify-content-between">
                                            <a role="button" href="/product/<%= product.product_id %>" tabindex="0">
                                                <h5 class="mb-1">
                                                    <%= product.name %>
                                                </h5>
                                            </a>
                                        </div>
                                        <div class="row">
                                            <dd class="col-sm-9">
                                                <%= product.size %>
                                            </dd>
                                        </div>
                                        <div class="row">
                                            <dd class="col-sm-9">
                                                <%= product.colour %>
                                            </dd>
                                        </div>
                                        <div class="row">
                                            <dd class="col-sm-9">
                                                <%= product.category %>
                                            </dd>
                                            <div class="col">
                                                <p class="text-end">Cena: <%= product.price %> zł</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <div class="row justify-content-end" style="margin: 50px 20px;">
                                    <div class="col-auto">
                                        <div class="alert alert-dark" role="alert">
                                            <%= status %>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <h1 class="display-6">
                                            <%= Math.round(sum*100) / 100 %> zł
                                        </h1>
                                    </div>

                                </div>
            </div>

            <%- include('templates/end'); %>